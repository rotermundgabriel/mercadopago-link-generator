# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações do Banco de Dados
DB_PATH=./database.db

# URLs da Aplicação (para Railway deployment)
BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# Configurações do Mercado Pago (globais - opcionais)
# Estas são opcionais pois cada usuário usa suas próprias credenciais
MP_ACCESS_TOKEN=your_mp_access_token_here
MP_PUBLIC_KEY=your_mp_public_key_here

# URLs do Mercado Pago
MP_BASE_URL=https://api.mercadopago.com
MP_SANDBOX_BASE_URL=https://api.mercadolibre.com

# Configurações de Webhook (para notificações do MP)
WEBHOOK_SECRET=your_webhook_secret_here

# Configurações de Segurança
JWT_SECRET=your_jwt_secret_for_sessions
SESSION_SECRET=your_session_secret_here

# Configurações de Log
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Limites da aplicação
MAX_LINKS_PER_USER=100
MAX_AMOUNT_VALUE=10000
MIN_AMOUNT_VALUE=1

# Configurações de Email (para notificações - opcional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@mp-payment-links.com
